<!DOCTYPE html>
@model EAD_Pro1.Models.User

    @{
        Layout = "~/Views/Shared/Layout.cshtml";
        }

			<div class="body">
				<div class="content-about">
					<div>
						<h3>SignUp</h3>
					</div>
					<div class="featured">
						<img src="~/images/sss.jpg" alt="">
					</div>
					<div>
				<div>

                     @using (Html.BeginForm("signup","User",FormMethod.Post))
                     {
                         
                                 @Html.AntiForgeryToken()
                                 @Html.ValidationSummary(true)
                       
                     @Html.LabelFor(m=>m.Name) 
                     @Html.TextBoxFor(m => m.Name, new  {id="Name", Name="Name",style="color:red" })
                     @Html.ValidationMessageFor(model => model.Name)

                    <input type="button" value="Check availability" id="c5"/>

                    <div id="result" style="color:red"></div> 
                    @Scripts.Render("~/bundles/jquery")
                    <script>

                      $(document).ready(function () {

                          $('#c5').click(function () {

                              $('#c5').hide();
                              var email = $('#Name').val();
                                 
                              $('#c5').show();
                              $.getJSON("/User/CheckUserName?email=" + email, function (data) {

                                  $('#c5').hide();
                                  if (data) {
                                      $('#result').text("User already exists in database");
                                  }
                                  else {
                                      $('#result').text("User Name is available");
                                  }
                              });

                          });

                      });
                </script>

                <li>
                
                @Html.LabelFor(m=>m.Password)
                @Html.TextBoxFor(m => m.Password, new  {id="Password", Name="Password",style="color:red" })
                @Html.ValidationMessageFor(model => model.Password)
              </li>

                 <li>
                
               @Html.LabelFor(m=>m.Email)
               @Html.TextBoxFor(m => m.Email, new  {id="Email", Name="Email",style="color:red" })
               @Html.ValidationMessageFor(model => model.Email)
              </li>


              <li>
                <input type="submit" name="imageField" id="imageField" class="send" value="submit" />
                <div class="clr"></div>
              </li>
						
                    }   
                    <div class="sidebar">
                            <div>
                                <div>
                                    <div>
                                <h3>Register Yourself first to be the part of this fashion world. Enter Your UserName and password and get registered. Rest is simple. Just click on the products and add to cart.</h3>
                                     </div>
                              
						</div>
					</div>
				</div>

    @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}