<!DOCTYPE html>
@model EAD_Pro1.Models.User
    
    @{
        Layout = "~/Views/Shared/Layout.cshtml";
        }

			<div class="body">
				<div class="content-contact">
					<div>
						<div>
							<h3>Contact</h3>
							
							<form action="index">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
								<h4>Send Us A Quick Message</h4>

								<input type="text" Name="Name" >
								@Html.ValidationMessageFor(model => model.Name)

                                <input type="text" >
								@Html.ValidationMessageFor(model => model.Email)

                                <input type="text" >
                                
								<textarea name="comment" id="comment" cols="30" rows="10">Your Comment</textarea>
								<input type="submit" class="submit" value="Submit Message">
							</form>
						</div>
						<div class="sidebar">
							<h3>Contact Info</h3>
							<span>Address</span>
							<p>
								3933 Melrose Street <br> Spokane Valley, WA 99206
							</p>
							<span>Talk To Us</span>
							<p>
								Phone: 509.998.7719 <br> Email: <a href="#">info@originsarchitects.com</a>
							</p>
							<span>Office Hours</span>
							<p>
								Mondays to Fridays <br> 9:00 am to 5:00 pm <br><br> Saturdays <br> 9:00 am to 12:00 pm <br><br> Sundays <br> By appointment only
							</p>
						</div>
					</div>
				</div>
				
			</div>


     @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}